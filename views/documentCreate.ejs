<html>
  <head>
    <title>SODA</title>
    <script src="/js/jquery-3.5.1.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="container">
      <%- include('includes/header'); %>
      <div style="margin-top:20px">
      <form method="POST" action="/insertDocument" onsubmit="return validateForm()" name="createDocumentForm">
        <div class="form-group row justify-content-md-center">
          <label for="inputName" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-5">
            <input type="text" class="form-control" id="inputName" placeholder="Product Name" name="name">
          </div>
        </div>
        <div class="form-group row justify-content-md-center">
          <label for="inputDesc" class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-5">
            <textarea name="description" id="inputDesc" rows="5" cols="59"></textarea>
          </div>
        </div>
        <div class="form-group row justify-content-md-center">
          <label for="inputSelect" class="col-sm-2 col-form-label">Category</label>
          <div class="col-sm-5">
            <select id="inputSelect" class="form-control" name="category">
              <option selected>Electronics</option>
              <option>Personal Care</option>
            </select>
          </div>
        </div>
        <div class="form-group row justify-content-md-center">
          <label for="inputPrice" class="col-sm-2 col-form-label">Price</label>
          <div class="col-sm-5">
            <input type="text" class="form-control" id="inputPrice" name="price">
          </div>
        </div>
        <div class="form-group row justify-content-md-center">
          
          <label class="col-sm-2 col-form-label">Availablity</label>
          <div  class="col-sm-5">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="availablity" id="radio1" value="1" checked>
              <label class="form-check-label" for="radio1">In-Stock</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="availablity" id="radio2" value="0">
              <label class="form-check-label" for="radio2">Out Of Stock</label>
            </div>
          </div>
          
        </div>
        <div style="text-align: center;margin-top:20px">
          <input type="submit" value="Insert Document" class="btn btn-success">
        </div>
      </form>
    </div>
    </div>
    <script>
     
     
    </script>
  </body>
</html>
